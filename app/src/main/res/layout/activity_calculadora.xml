<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center|bottom"
    android:background="@color/black"
    tools:context=".Calculadora">



<TextView
    android:id="@+id/proceso"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:text="0"
    android:textSize="30sp"
    android:gravity="end"
    tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/resultado"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="0"
        android:textSize="30sp"
        android:gravity="end"
        tools:ignore="MissingConstraints" />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="6"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="100dp">

            <Button
                android:id="@+id/porcentaje"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/ColorDos"
                android:text="%"
                android:textColor="#607D8B"
                android:textSize="40dp" />

            <Button
                android:id="@+id/parentesis"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/ColorDos"
                android:text="()"
                android:textColor="#607D8B"
                android:textSize="40dp" />

            <Button
                android:id="@+id/Limpiar"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@color/ColorDos"
                android:text="C"
                android:textColor="#607D8B"
                android:textSize="40dp" />

            <Button
                android:id="@+id/borrar"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:background="@color/ColorDos"
                android:text="b"
                android:textColor="#607D8B"
                android:textSize="40dp" />

        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="100dp">

            <Button
                android:id="@+id/txtsiete"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="7"
                android:textSize="40dp" />

            <Button
                android:id="@+id/txtocho"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="8"
                android:textSize="40dp" />

            <Button
                android:id="@+id/txtnueve"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="9"
                android:textSize="40dp" />

            <Button
                android:id="@+id/multiplicar"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:background="@color/ColorDos"
                android:text="X"
                android:textColor="#607D8B"
                android:textSize="40dp" />


        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="100dp">

            <Button
                android:id="@+id/txtcuatro"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="4"
                android:textSize="40dp" />

            <Button
                android:id="@+id/txtcinco"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="5"
                android:textSize="40dp" />

            <Button
                android:id="@+id/txtseis"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="6"
                android:textSize="40dp" />

            <Button
                android:id="@+id/txtrestar"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:background="@color/ColorDos"
                android:text="-"
                android:textColor="#607D8B"
                android:textSize="40dp" />


        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="100dp">

            <Button
                android:id="@+id/txtuno"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="1"
                android:textSize="40dp" />

            <Button
                android:id="@+id/txtdos"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="2"
                android:textSize="40dp" />

            <Button
                android:id="@+id/txttres"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="3"
                android:textSize="40dp" />

            <Button
                android:id="@+id/txtsumar"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:background="@color/ColorDos"
                android:text="+"
                android:textColor="#607D8B"
                android:textSize="40dp" />

        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="100dp">

            <Button
                android:id="@+id/txtdividir"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="/"
                android:textSize="40dp" />

            <Button
                android:id="@+id/txtcero"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="40dp" />

            <Button
                android:id="@+id/txtpunto"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="."
                android:textSize="40dp" />

            <Button
                android:id="@+id/txtigual"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:background="@color/ColorDos"
                android:text="="
                android:textColor="#607D8B"
                android:textSize="40dp" />


        </LinearLayout>


    </GridLayout>
</LinearLayout>